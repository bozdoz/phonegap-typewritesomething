<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.typewritesomething" version="0.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Typewrite Something</name>
    <description>
        A minimalistic typewriter simulator to help you write more creatively!
    </description>
    <author email="typewritesomething@bozdoz.com" href="https://twitter.com/bozdoz">
        @bozdoz
    </author>
    <content src="index.html" />
    
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.1" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2" />
    <plugin name="cordova-plugin-shake" source="npm" spec="~0.5.4" />
    <plugin name="cordova-plugin-device-motion" source="npm" spec="~1.2.3" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.3.1" />

    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="KeepRunning" value="false" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreenBackgroundColor" value="#f6f3e3" />
    <preference name="ShowSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashScreenDelay" value="4000" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    
    <icon src="www/icon.png" />
    <splash src="www/splash.png" />

    <platform name="browser">
        <icon src="www/icon.png" />
        <preference name="SplashScreen" value="splash.png" />
    </platform>

    <platform name="android">
        <icon density="ldpi" src="res/icon/android/tws-ldpi-icon.png" />
        <icon density="mdpi" src="res/icon/android/tws-mdpi-icon.png" />
        <icon density="hdpi" src="res/icon/android/tws-hdpi-icon.png" />
        <icon density="xhdpi" src="res/icon/android/tws-xhdpi-icon.png" />
        <icon density="xxhdpi" src="res/icon/android/tws-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="res/icon/android/tws-xxxhdpi-icon.png" />
        <splash density="land-ldpi" src="res/screen/android/tws-land-ldpi-screen.png" />
        <splash density="land-mdpi" src="res/screen/android/tws-land-mdpi-screen.png" />
        <splash density="land-hdpi" src="res/screen/android/tws-land-hdpi-screen.png" />
        <splash density="land-xhdpi" src="res/screen/android/tws-land-xhdpi-screen.png" />
        <splash density="land-xxhdpi" src="res/screen/android/tws-land-xxhdpi-screen.png" />
        <splash density="land-xxxhdpi" src="res/screen/android/tws-land-xxxhdpi-screen.png" />
        <splash density="port-ldpi" src="res/screen/android/tws-port-ldpi-screen.png" />
        <splash density="port-mdpi" src="res/screen/android/tws-port-mdpi-screen.png" />
        <splash density="port-hdpi" src="res/screen/android/tws-port-hdpi-screen.png" />
        <splash density="port-xhdpi" src="res/screen/android/tws-port-xhdpi-screen.png" />
        <splash density="port-xxhdpi" src="res/screen/android/tws-port-xxhdpi-screen.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/tws-port-xxxhdpi-screen.png" />
    </platform>
    <platform name="ios">
        <icon height="57" platform="ios" src="res/icon/ios/icon.png" width="57" />
        <icon height="114" platform="ios" src="res/icon/ios/icon@2x.png" width="114" />
        <icon height="40" platform="ios" src="res/icon/ios/icon-40.png" width="40" />
        <icon height="80" platform="ios" src="res/icon/ios/icon-40@2x.png" width="80" />
        <icon height="50" platform="ios" src="res/icon/ios/icon-50.png" width="50" />
        <icon height="100" platform="ios" src="res/icon/ios/icon-50@2x.png" width="100" />
        <icon height="60" platform="ios" src="res/icon/ios/icon-60.png" width="60" />
        <icon height="120" platform="ios" src="res/icon/ios/icon-60@2x.png" width="120" />
        <icon height="180" platform="ios" src="res/icon/ios/icon-60@3x.png" width="180" />
        <icon height="72" platform="ios" src="res/icon/ios/icon-72.png" width="72" />
        <icon height="144" platform="ios" src="res/icon/ios/icon-72@2x.png" width="144" />
        <icon height="76" platform="ios" src="res/icon/ios/icon-76.png" width="76" />
        <icon height="152" platform="ios" src="res/icon/ios/icon-76@2x.png" width="152" />
        <icon height="29" platform="ios" src="res/icon/ios/icon-small.png" width="29" />
        <icon height="58" platform="ios" src="res/icon/ios/icon-small@2x.png" width="58" />
        <icon height="87" platform="ios" src="res/icon/ios/icon-small@3x.png" width="87" />
        <splash height="1136" platform="ios" src="res/screen/ios/tws-568h@2x~iphone.png" width="640" />
        <splash height="1334" platform="ios" src="res/screen/ios/tws-667h.png" width="750" />
        <splash height="2208" platform="ios" src="res/screen/ios/tws-736h.png" width="1242" />
        <splash height="1242" platform="ios" src="res/screen/ios/tws-Landscape-736h.png" width="2208" />
        <splash height="1536" platform="ios" src="res/screen/ios/tws-Landscape@2x~ipad.png" width="2048" />
        <splash height="768" platform="ios" src="res/screen/ios/tws-Landscape~ipad.png" width="1024" />
        <splash height="2048" platform="ios" src="res/screen/ios/tws-Portrait@2x~ipad.png" width="1536" />
        <splash height="1024" platform="ios" src="res/screen/ios/tws-Portrait~ipad.png" width="768" />
        <splash height="960" platform="ios" src="res/screen/ios/tws@2x~iphone.png" width="640" />
        <splash height="480" platform="ios" src="res/screen/ios/tws~iphone.png" width="320" />
    </platform>
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
