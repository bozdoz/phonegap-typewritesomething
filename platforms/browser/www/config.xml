<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.typewritesomething" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Typewrite Something!</name>
    <description>
        A minimalistic typewriter simulator to help you write more creatively!
    </description>
    <author email="typewritesomething@bozdoz.com" href="https://twitter.com/bozdoz">
        @bozdoz
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="StatusBarOverlaysWebView" value="true" />
</widget>
